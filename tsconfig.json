{
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",

		"module": "es6",
		"target": "es6",
		"moduleResolution": "node10",

		"lib": ["ES6"],
		"types": ["node", "jest"],

		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,

		"strict": true,
		"skipLibCheck": true,

		"noUncheckedIndexedAccess": true,
		"exactOptionalPropertyTypes": true,
		"isolatedModules": false,
		"esModuleInterop": true,

		"allowImportingTsExtensions": true,
		"noEmit": true,

		"strictPropertyInitialization": false
	},
	"include": ["src"]
}
