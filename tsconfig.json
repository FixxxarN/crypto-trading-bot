{
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",

		"module": "commonjs",
		"target": "es6",
		"moduleResolution": "node10",

		"lib": ["ES6"],
		"types": ["node"],

		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,

		"strict": true,
		"skipLibCheck": true,

		"noUncheckedIndexedAccess": true,
		"exactOptionalPropertyTypes": true,
		"isolatedModules": false,
		"esModuleInterop": true
	},
	"include": ["src"]
}
